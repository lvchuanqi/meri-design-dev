@import "../static/stylus/animate/selectDownUpExtend.styl"

.m-select
  display inline-block
  vertical-align middle
  font-size 0

.m-drop-box
  position absolute
  z-index 7000
  display inline-block
  background-color $theme
  border 1px solid $grey-300
  border-radius 4px
  width 180px
  overflow hidden
  font-size 0
.m-drop-box-shadow-top
  box-shadow $box-shadow-top
.m-drop-box-shadow-bottom
  box-shadow $box-shadow-bottom
.m-drop-box-content
  padding-top 8px
  padding-bottom @padding-top
  width 100%
  overflow-x hidden
  overflow-y auto
.m-drop-box-content-normal
  //max-height 208px
  max-height 200px
.m-drop-box-content-max
  //max-height 322px
  max-height 320px
.m-drop-option
  padding-left 12px
  width 100%
  height 38px
  line-height @height
  cursor pointer
  transition background-color .3s
.m-drop-option-normal
  &:hover
    background-color $grey-100
.m-drop-option-selected
  background-color $blue-100
  &:hover
    background-color $blue-100
  .m-drop-option-text
    color $blue-500
.m-drop-option-disabled
  background-color transparent
  cursor not-allowed
  user-select none
  .m-drop-option-text
    color $grey-400
.m-drop-option-text
  width 100%
  height 100%
  font-size 14px
  color $grey-900
  overflow hidden
  white-space nowrap
  text-overflow ellipsis
.m-drop-option-text-highlight
  color $blue-500
.m-drop-option-none
  padding 8px 12px
  font-size 14px
  color $grey-400

.m-drop-handle
  padding-top 12px
  padding-bottom 12px
  width 100%
  text-align right
.m-drop-handle-shadow
  box-shadow $box-shadow-top
.m-drop-btn
  margin-right 12px
  line-height 22px
  font-size 14px
  transition color .3s
  user-select none
.m-drop-btn-cancel
  color $grey-900
  cursor pointer
.m-drop-btn-confirm
  color $blue-500
  cursor pointer
  &:hover
    color $blue-400
  &:active
    color $blue-600
.m-drop-btn-disabled
  color $grey-400
  cursor not-allowed
